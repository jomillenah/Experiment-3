#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
char characters[100];
int size;
    
    cout << "Number of characters you want to input: ";
    cin >> size;
    
    cout << "\nEnter " << size << " characters: \n";
    for (int i = 0; i < size; i++)
    {
        cin >> characters[i];
    }
    cout <<"\n" << "The reverse order is: \n"<< endl;
    for (int j = size ; j >= 0; j--)
    {
        cout << characters[j];
    }
    
_getch();
return 0;
}
